{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "lib": ["es6", "es7", "esnext", "dom"]
  },
  "include": ["src"],
  "exclude": [
    "docs",
    "node_modules",
    "stencil.config.ts",
    "dist",
    "www",
    "src/**/*.spec.ts*",
    "src/**/*.e2e.ts*"
  ],
  "references": [
    { "path": "../design-system" },
    { "path": "../pkg2" },
    { "path": "../pkg3" }
  ]
}
